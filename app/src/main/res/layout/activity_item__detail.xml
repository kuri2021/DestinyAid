<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item_DetailActivity"
    android:background="#ff404040">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_full"
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:src="@drawable/lastword_full" />

            <View
                android:id="@+id/item_coller"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="232dp"
                android:background="#ffcccc00" />

            <ImageView
                android:id="@+id/item_small"
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="190dp"
                android:src="@drawable/lastword_small" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/item_coller"
                android:layout_margin="12dp"
                android:layout_toRightOf="@+id/item_small"
                android:text="text"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/kinds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_coller"
                android:layout_alignParentRight="true"
                android:layout_margin="12dp"
                android:src="@drawable/kinds" />

            <TextView
                android:id="@+id/item_kategorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_coller"
                android:padding="12dp"
                android:text="핸드캐논"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/item_kategorie"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#ffffffff" />

            <ImageView
                android:id="@+id/special_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_kategorie"
                android:padding="12dp"
                android:src="@drawable/ic_baseline_toc_24" />

            <TextView
                android:id="@+id/special_function_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_kategorie"
                android:text="text"
                android:layout_toRightOf="@+id/special_function"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:padding="12dp"
                android:singleLine="false"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/special_function_text"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#ffffffff" />
            <ImageView
            android:id="@+id/function1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/special_function"
            android:padding="12dp"
            android:src="@drawable/ic_baseline_toc_24" />

            <TextView
                android:id="@+id/function1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/special_function"
                android:text="text"
                android:layout_toRightOf="@+id/special_function"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:padding="12dp"
                android:singleLine="false"/>
            <ImageView
                android:id="@+id/function2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/function1_text"
                android:padding="12dp"
                android:src="@drawable/ic_baseline_toc_24" />

            <TextView
                android:id="@+id/function2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/function1_text"
                android:text="text"
                android:layout_toRightOf="@+id/special_function"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:padding="12dp"
                android:singleLine="false"/>
            <ImageView
                android:id="@+id/function3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/function2_text"
                android:padding="12dp"
                android:src="@drawable/ic_baseline_toc_24" />

            <TextView
                android:id="@+id/function3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/function2_text"
                android:text="text"
                android:layout_toRightOf="@+id/function3"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:padding="12dp"
                android:singleLine="false"/>
            <ImageView
                android:id="@+id/function4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/function3_text"
                android:padding="12dp"
                android:src="@drawable/ic_baseline_toc_24" />

            <TextView
                android:id="@+id/function4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/function3_text"
                android:text="text"
                android:layout_toRightOf="@+id/function3"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:padding="12dp"
                android:singleLine="false"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/function4_text"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#ffffffff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이야기"
                android:layout_below="@id/function4_text"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/lore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/function4_text"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="12dp"
                android:text="유언\n마지막 불꽃이 꺼지고 필요한 말을 모두 끝낼 때까지 당신의 것입니다."/>

            <LinearLayout
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_below="@+id/lore"
                android:background="#ffaaaaaa">

                <EditText
                    android:id="@+id/et_cmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:layout_toRightOf="@+id/comment_img"
                    android:layout_below="@+id/lore"
                    android:layout_marginRight="8dp"
                    android:hint="무기평가"
                    android:layout_gravity="center"
                    android:textColor="#ff333333"
                    android:inputType="textMultiLine"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="확인"
                    android:onClick="click_success"
                    android:layout_toRightOf="@+id/et"
                    android:layout_below="@+id/lore"
                    android:backgroundTint="@color/white"
                    android:textColor="#ff444444"/>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comment_List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment"/>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>