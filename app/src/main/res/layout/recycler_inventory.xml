<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:background="@color/purple_500">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/Equipitemname_tv"
        android:background="#ff333333"/>

    <ImageView
        android:id="@+id/Equipitem_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="12dp"/>
    <TextView
        android:id="@+id/Equipitemname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Equipitem_iv"
        android:text="Last word"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"/>
    <ImageView
        android:id="@+id/Equipitemlock_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff222222"
        android:layout_below="@+id/Equipitemname_tv"
        />
    <TextView
        android:id="@+id/kategorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핸드캐논"
        android:textColor="@color/white"
        android:layout_below="@+id/Equipitemname_tv"
        android:layout_toRightOf="@+id/Equipitem_iv"/>

    <ImageView
        android:id="@+id/ability"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Equipitem_iv"
        android:layout_below="@+id/kategorie"/>



</RelativeLayout>